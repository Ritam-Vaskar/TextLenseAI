{
    "manifest_version": 3,
    "name": "TextLens AI",
    "version": "1.0",
    "description": "Extract and analyze non-copyable text using AI-powered OCR",
    "permissions": [
      "activeTab",
      "scripting",
      "tabs",
      "storage"
    ],
    "host_permissions": [
      "<all_urls>",
      "https://generativelanguage.googleapis.com/*"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "assets/icon16.svg",
        "48": "assets/icon48.svg",
        "128": "assets/icon128.svg"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "16": "assets/icon16.svg",
      "48": "assets/icon48.svg",
      "128": "assets/icon128.svg"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "css": ["content.css"],
        "js": [
          "libs/html2canvas.min.js",
          "libs/tesseract.min.js",
          "content.js"
        ],
        "run_at": "document_idle"
      }
    ],
    "web_accessible_resources": [
      {
        "resources": [
          "libs/html2canvas.min.js", 
          "libs/tesseract.min.js",
          "libs/tesseract-core.wasm.js",
          "libs/worker.min.js"
        ],
        "matches": ["<all_urls>"]
      }
    ]
  }